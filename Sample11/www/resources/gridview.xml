<mvc:View
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    class="sapUiSizeCompact">
    <App id="app">
        <Page title="Panel">

            <Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
                <headerToolbar>
                    <Toolbar height="3rem">
                        <Title text="Yönetim Bilgileri"/>
                    </Toolbar>
                </headerToolbar>
                <content>
                    <l:Grid hSpacing="1" vSpacing="0" defaultSpan="L6 M12 S12">
                        <VBox alignItems="Stretch" justifyContent="Stretch">
                            <VBox width="100%" alignItems="Center" justifyContent="Center">
                                <HBox width="100%" alignItems="Center" justifyContent="Start">
                                    <Label text="Proje Sponsoru" width="130px" LabelFor="projesponsoru"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                        <Input placeholder="Personel Ara"/>
                                    </VBox>
                                </HBox>
                            </VBox>
                            <VBox width="100%" alignItems="Start" justifyContent="Stretch">
                                <HBox width="100%" alignItems="Center" justifyContent="Stretch">
                                    <Label text="Satış Yöneticisi" width="130px" LabelFor="satisyöneticisi"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                        <Input placeholder="Personel Ara"/>
                                    </VBox>
                                </HBox>
                            </VBox>
                        </VBox>
                        <VBox alignItems="Start" justifyContent="Stretch">
                            <HBox width="100%" alignItems="Center" justifyContent="Center">
                                <Label text="Proje Yöneticisi" width="130px" LabelFor="projeyöneticisi"/>
                                <Label width="10px" text=" : "/>
                                <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                    <Input placeholder="Personel Ara"/>
                                </VBox>
                            </HBox>
                        </VBox>
                    </l:Grid>
                </content>
            </Panel>

            <Panel width="auto" class="sapUiResponsiveMargin">
                <headerToolbar>
                    <Toolbar height="3rem">
                        <Title text="Proje Bilgileri"/>
                        <ToolbarSpacer/>
                    </Toolbar>
                </headerToolbar>
                <content>
                    <l:Grid hSpacing="1" vSpacing="0" defaultSpan="L6 M12 S12">
                        <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                            <VBox alignItems="Center" justifyContent="Center">
                                <HBox width="100%" alignItems="Center" justifyContent="Start">
                                    <Label text="Proje" width="130px" LabelFor="proje"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                        <Input placeholder="Detayları Seçiniz..."/>
                                    </VBox>
                                </HBox>
                                <HBox width="100%" alignItems="Center" justifyContent="Start">
                                    <Label text="Proje Uzun Tanımı" width="130px" LabelFor="projeuzuntanımı"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                        <Input/>
                                    </VBox>
                                </HBox>
                                <HBox width="100%" alignItems="Center" justifyContent="Start">
                                    <Label text="Proje Kısa Tanımı" width="130px" LabelFor="projekısatanımı"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                        <Input/>
                                    </VBox>
                                </HBox>
                            </VBox>
                            <HBox width="100%" alignItems="Center" justifyContent="Start">
                                <HBox width="100%" alignItems="Center" justifyContent="Start">
                                    <Label text="Kapsam" width="130px" LabelFor="kapsam"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                        <Select width="100%">
                                            <items>
                                                <core:Item text="General"/>
                                            </items>
                                        </Select>
                                    </VBox>
                                </HBox>
                                <HBox width="100%" alignItems="Center" justifyContent="Start">
                                    <Label text="Proje Grup Tipi" width="130px" LabelFor="projegruptipi"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Start">
                                        <Select width="100%">
                                            <items>
                                                <core:Item text="Internal"/>
                                            </items>
                                        </Select>
                                    </VBox>
                                </HBox>
                            </HBox>
                            <HBox width="100%" alignItems="Center" justifyContent="Start">
                                <HBox
                                    width="100%"
                                    alignItems="Center"
                                    justifyContent="Start">
                                    <Label text="Başlangıç Tarihi" width="130px" LabelFor="baslangictarihi"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                        <DatePicker dateValue="{/date}"/>
                                    </VBox>
                                </HBox>
                                <HBox width="100%" alignItems="Center" justifyContent="Start">
                                    <Label text="Bitiş Tarihi" width="130px" LabelFor="bitistarihi"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Start">
                                        <DatePicker dateValue="{/date}"/>
                                    </VBox>
                                </HBox>
                            </HBox>
                            <HBox width="100%" alignItems="Center" justifyContent="Start">
                                <HBox width="100%" alignItems="Center" justifyContent="Start">
                                    <Label text="Proje Tipi" width="130px" LabelFor="projetipi"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                        <Select width="100%">
                                            <items>
                                                <core:Item text="Not"/>
                                                <core:Item text="Item2"/>
                                            </items>
                                        </Select>
                                    </VBox>
                                </HBox>
                                <HBox width="100%" alignItems="Center" justifyContent="Start">
                                    <Label text="Gün Sayımı" width="130px" LabelFor="günsayimi"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Start">
                                        <StepInput/>
                                    </VBox>
                                </HBox>
                            </HBox>
                            <HBox width="100%" alignItems="Center" justifyContent="Start">
                                <HBox width="100%" alignItems="Center" justifyContent="Start">
                                    <Label text="Proje Durumu" width="130px" LabelFor="projedurumu"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                        <Select width="100%">
                                            <items>
                                                <core:Item text="New"/>
                                            </items>
                                        </Select>
                                    </VBox>
                                </HBox>
                                <HBox width="100%" alignItems="Center" justifyContent="Start">
                                    <Label text="Aktiflik" width="130px" LabelFor="aktiflik"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Start">
                                        <Select width="100%">
                                            <items>
                                                <core:Item text="Aktif"/>
                                            </items>
                                        </Select>
                                    </VBox>
                                </HBox>
                            </HBox>
                            <HBox width="100%" alignItems="Center" justifyContent="Start">
                                <HBox width="100%" alignItems="Center" justifyContent="Start">
                                    <Label text="Seyahat Türü" width="130px" LabelFor="sayahattürü"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                        <Select width="100%">
                                            <items>
                                                <core:Item text="Company"/>
                                            </items>
                                        </Select>
                                    </VBox>
                                </HBox>
                                <HBox width="100%" alignItems="Center" justifyContent="Stretch">
                                    <Label text="Lokasyon Tipi" width="130px" LabelFor="lokasyontiipi"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox alignItems="Stretch" justifyContent="Start" width="100%">
                                        <Select width="100%">
                                            <items>
                                                <core:Item text="Company Place"/>
                                            </items>
                                        </Select>
                                    </VBox>
                                </HBox>
                            </HBox>
                        </VBox>
                        <VBox
                            width="100%"
                            alignItems="Stretch"
                            justifyContent="Stretch">
                            <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                <HBox width="100%" alignItems="Center" justifyContent="Start">
                                    <Label text="Proje Grubu" width="130px" LabelFor="projegrubu"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                        <Select width="100%"/>
                                    </VBox>
                                </HBox>
                                <HBox width="100%" alignItems="Center" justifyContent="Start">
                                    <Label text="Proje Alt Grubu" width="130px" LabelFor="projealtgrubu"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                        <Select width="100%">
                                            <items>
                                                <core:Item text="General"/>
                                            </items>
                                        </Select>
                                    </VBox>
                                </HBox>
                                <HBox width="100%" alignItems="Center" justifyContent="Start">
                                    <Label text="Müşteri" width="130px" LabelFor="müsteri"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                        <Input placeholder="Detay Danışmanlık"/>
                                    </VBox>
                                </HBox>
                                <HBox width="100%" alignItems="Center" justifyContent="Start">
                                    <Label text="Yetkilendirme" width="130px" LabelFor="yetkilendirme"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                        <Select width="100%">
                                            <items>
                                                <core:Item text="Owner Level"/>
                                            </items>
                                        </Select>
                                    </VBox>
                                </HBox>
                                <HBox width="100%" alignItems="Center" justifyContent="Start">
                                    <Label text="Sipariş Kodu" width="130px" LabelFor="sipariskodu"/>
                                    <Label width="10px" text=" : "/>
                                    <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
                                        <Input placeholder="Sipariş Kodu..."/>
                                    </VBox>
                                </HBox>
                                <VBox width="100%" alignItems="Center" justifyContent="Center">
                                    <HBox width="100%" alignItems="Center" justifyContent="Center">
                                        <HBox width="100%" alignItems="Center" justifyContent="Center">
                                            <Label text="Ticket" width="100px" LabelFor="Ticket"/>
                                            <Label width="10px" text=" : "/>
                                            <CheckBox/>
                                        </HBox>
                                        <HBox width="100%" alignItems="Center" justifyContent="Center">
                                            <Label text="Tubitak" width="100px" LabelFor="Tubitak"/>
                                            <Label width="10px" text=" : "/>
                                            <CheckBox/>
                                        </HBox>
                                        <HBox width="100%" alignItems="Center" justifyContent="Center">
                                            <Label text="Kosgeb" width="100px" LabelFor="Kosgeb"/>
                                            <Label width="10px" text=" : "/>
                                            <CheckBox/>
                                        </HBox>
                                    </HBox>
                                    <HBox width="100%" alignItems="Center" justifyContent="Start">
                                        <HBox width="100%" alignItems="Center" justifyContent="Center">
                                            <Label text="Arge" width="100px" LabelFor="Arge"/>
                                            <Label width="10px" text=" : "/>
                                            <CheckBox/>
                                        </HBox>
                                        <HBox width="100%" alignItems="Center" justifyContent="Center">
                                            <Label text="Teknokent" width="100px" LabelFor="Teknokent"/>
                                            <Label width="10px" text=" : "/>
                                            <CheckBox/>
                                        </HBox>
                                        <HBox width="100%" alignItems="Center" justifyContent="Center">
                                            <Label text="SLA" width="100px" LabelFor="SLA"/>
                                            <Label width="10px" text=" : "/>
                                            <CheckBox/>
                                        </HBox>
                                    </HBox>
                                </VBox>
                            </VBox>
                        </VBox>
                    </l:Grid>
                </content>
            </Panel>

        </Page>
    </App>
</mvc:View>