<core:FragmentDefinition
    height="100%"
    width="100%"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core">
    <Dialog
        showHeader="false"
        modal="true"
        stretchOnPhone="true"
        showCloseButton="false"
        horizontalScrolling="false"
        verticalScrolling="false"
        contentWidth="60%"
        contentHeight="70%"
        class="sapUiNoPadding sapUiNoMargin sapUiNoContentPadding staticsDialog">
        <HBox width="100%" height="100%" alignItems="Stretch" justifyContent="Stretch">
            <VBox width="30%" height="100%" alignItems="Center" justifyContent="Start" class="left-side-view">
                <HBox alignItems="Center" justifyContent="Start" class="sapUiLargeMarginTop">
                    <f:Avatar src="https://randomuser.me/api/portraits/men/0.jpg" class="sapUiTinyMarginEnd"/>
                    <VBox alignItems="Start" justifyContent="Center">
                        <Text text="Alec Issigonis"/>
                        <Text text="EDIT"/>
                    </VBox>
                </HBox>
                <VBox width="100%" height="100%" alignItems="Center" justifyContent="SpaceBetween">
                    <VBox alignItems="Stretch" justifyContent="Start" class="sapUiLargeMarginTop">
                        <HBox alignItems="Center" justifyContent="Start" class="sapUiSmallMarginBottom left-side-listItem">
                            <core:Icon src="sap-icon://grid" size="25px" class="sapUiTinyMarginEnd"/>
                            <Text text="DASHBOARD" width="100px"/>
                        </HBox>
                        <HBox alignItems="Center" justifyContent="Start" class="sapUiSmallMarginBottom left-side-listItem">
                            <core:Icon src="sap-icon://collaborate" size="25px" class="sapUiTinyMarginEnd"/>
                            <Text text="MEMBERS" width="100px"/>
                        </HBox>
                        <HBox alignItems="Center" justifyContent="Start" class="sapUiSmallMarginBottom left-side-listItem">
                            <core:Icon src="sap-icon://database" size="25px" class="sapUiTinyMarginEnd"/>
                            <Text text="DATABASE" width="100px"/>
                        </HBox>
                        <HBox alignItems="Center" justifyContent="Start" class="sapUiSmallMarginBottom left-side-listItem">
                            <core:Icon src="sap-icon://bar-chart" size="25px" class="sapUiTinyMarginEnd"/>
                            <Text text="STATISTICS" width="100px"/>
                        </HBox>
                    </VBox>
                    <HBox alignItems="Center" justifyContent="Start" class="sapUiSmallMarginBottom left-side-listItem">
                        <core:Icon src="sap-icon://action-settings" size="25px" class="sapUiTinyMarginEnd"/>
                        <Text text="SETTINGS" width="100px"/>
                    </HBox>
                </VBox>
            </VBox>
            <HBox width="70%" height="100%" alignItems="Stretch" justifyContent="Start" class="right-side-view">
                <VBox width="100%" alignItems="Stretch" justifyContent="Start">
                    <VBox width="100%" alignItems="Start" justifyContent="Start">
                        <Label text="Yearly Statistics" design="Bold"/>
                        <Label text="Kindness And Motivation Tips Challange"/>
                    </VBox>
                    <VBox width="100%" alignItems="Stretch" justifyContent="Start" class="sapUiSmallMarginTop">
                        <VBox width="100%" alignItems="Stretch" justifyContent="Start" class="sapUiMediumMarginBottom">
                            <Label text="LAKE OKEY" design="Bold"/>
                            <core:HTML content="
                                &lt;div class=&quot;div-lake-okey&quot;&gt;
                                &lt;/div&gt;
                            "/>
                        </VBox>
                        <VBox width="100%" alignItems="Stretch" justifyContent="Start" class="sapUiMediumMarginBottom">
                            <Label text="HOWELLFORT" design="Bold"/>
                            <core:HTML content="
                                &lt;div class=&quot;div-howell-fort&quot;&gt;
                                &lt;/div&gt;
                            "/>
                        </VBox>
                        <VBox width="100%" alignItems="Stretch" justifyContent="Start" class="sapUiMediumMarginBottom">
                            <Label text="EAST TRENTON" design="Bold"/>
                            <core:HTML content="
                                &lt;div class=&quot;div-east&quot;&gt;
                                &lt;/div&gt;
                            "/>
                        </VBox>
                        <VBox width="100%" alignItems="Stretch" justifyContent="Start" class="sapUiMediumMarginBottom">
                            <Label text="BLICK VILLE" design="Bold"/>
                            <core:HTML content="
                                &lt;div class=&quot;div-ville&quot;&gt;
                                &lt;/div&gt;
                            "/>
                        </VBox>
                    </VBox>
                    <VBox width="100%" alignItems="Stretch" justifyContent="Start" class="sapUiSmallMarginTop">
                        <Label text="395K" design="Bold" class="sapUiSmallMarginBottom total-price-label"/>
                        <Label text="Total Monitzed"/>
                        <Label wrapping="true" text="Cold calling can be great way to generate quality leads. You get to speak to the gateleepers."/>
                    </VBox>
                </VBox>
                <VBox width="100%" alignItems="Stretch" justifyContent="Start" class="ride-side-view-padding">
                    <VBox width="100%" alignItems="Start" justifyContent="Start">
                        <Label text="Article Publications" design="Bold"/>
                        <Label text="Kindness And Motivation Tips Challange"/>
                    </VBox>
                    <List items="{/UserListModel}">
                        <CustomListItem class="right-side-listStyle sapUiSmallMarginBottom">
                            <HBox width="100%" alignItems="Stretch" justifyContent="Start">
                                <HBox alignItems="Start" justifyContent="Center" height="100%">
                                    <core:Icon src="sap-icon://appear-offline" color="{color}" size="10px"/>
                                </HBox>
                                <VBox alignItems="Stretch" justifyContent="Center" class="sapUiSmallMarginBegin">
                                    <Label text="{name}" design="Bold"/>
                                    <Text text="{content}"/>
                                </VBox>
                            </HBox>
                        </CustomListItem>
                    </List>
                </VBox>
            </HBox>
        </HBox>
    </Dialog>
</core:FragmentDefinition>