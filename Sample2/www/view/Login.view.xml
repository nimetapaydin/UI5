<mvc:View
	height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<App id="app">
		<Page
			title="Aktivite Kaydı Oluşturma"
			class="sapUiContentPadding">		
		<content>
		<VBox  height="100%" alignItems="Stretch" justifyContent="End">
		
			<HBox width="100%" alignItems="Center" justifyContent="Center">
				<Label width="100px" design="Bold"  text="Proje" labelFor="proje"/>
				<Label width="10px"  text=":" labelFor="proje"/>
				 <VBox width="100%" alignItems="Stretch" justifyContent="Stretch">
					<Input />
			   </VBox>
			</HBox>			
			
			<HBox width="100%" alignItems="Center" justifyContent="Center">
				<Label width="100px" text="Alt Proje" LabelFor="altproje"/>
				<Label width="10px"  text=":" labelFor="altproje"/>
				<VBox width= "100%" alignItems="Stretch" justifyContent="Stretch">
					<Input/>
				</VBox>
			</HBox>

			<HBox width="100%" alignItems="Center" justifyContent="Stretch">
         	<HBox width="100%" alignItems="Center" justifyContent="Stretch">
					 <Label  width="100px" text="Çalışma Saati" LabelFor="calismasaati"/>
					 <Label width="10px"  text=":" labelFor="calismasaati"/>
						<VBox width= "100%" alignItems="Stretch" justifyContent="Stretch">
							<Select width="100%" ></Select>
						</VBox>
					</HBox>
					<HBox width="100%" alignItems="Center" justifyContent="Stretch" class="sapUiSmallMarginBegin">
						<Label width="100px" text="Fatura Saati" LabelFor="faturasaati"/>
						<Label width="10px"  text=":" labelFor="proje"/>
						<VBox width= "100%" alignItems="Stretch" justifyContent="Stretch">
							<Select width="100%" ></Select>
						</VBox>
					</HBox>
			</HBox>

			<HBox width="100%" alignItems="Center" justifyContent="Center">
					<HBox width="100%" alignItems="Center" justifyContent="Center">
						<Label width="100px" text="Proje Yer" LabelFor="projeyer"/>
						<Label width="10px"  text=":" labelFor="projeyer"/>
						<VBox width= "100%" alignItems="Stretch" justifyContent="Stretch">
						  <Select  width="100%" ></Select>
						</VBox>	
					</HBox>	 
					<HBox width="100%" alignItems="Center" justifyContent="Center" class="sapUiSmallMarginBegin">
						<Label width="100px" text="Proje Konumu" LabelFor="projekonumu"/>
						<Label width="10px"  text=":" labelFor="projekonumu"/>
						<VBox width= "100%" alignItems="Stretch" justifyContent="Stretch">
							<Select  width="100%" ></Select>
						</VBox>
					</HBox>
			</HBox>

			<HBox>
				<VBox width="100%" alignItems="Start" justifyContent="End">
				<HBox width="100%" alignItems="Start" justifyContent="Start">
					<Label width="100px" text="Aktivite İçeriği" LabelFor="aktiviteicerigi"/>			
					<Label width="10px"  text=":" labelFor="aktiviteicerigi"/>
					</HBox>
					<VBox width= "100%" alignItems="Stretch" justifyContent="Stretch">
						<Input/>
					</VBox>
				</VBox>
			</HBox>
  
	   <VBox>
	    	<VBox width="100%" alignItems="End" justifyContent="End">
		      <Button text="Kaydet" />
        </VBox>
		 </VBox>	
		</VBox>
		</content>
		<footer>
			<Toolbar>
				<HBox width="100%" alignItems="Center" justifyContent="Center">
					<Button text="Delete" type="Emphasized" />
				</HBox>
			</Toolbar>		
		</footer>
	</Page>
	</App>	
</mvc:View>